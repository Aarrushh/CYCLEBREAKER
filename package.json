{
  "name": "cyclebreaker",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.17"
  },
  "overrides": {},
  "scripts": {
    "dev": "concurrently -k --names api,web --prefix-colors blue,magenta \"npm:dev:api\" \"npm:dev:web\"",
    "dev:api": "cross-env NODE_ENV=development npm -w @cyclebreaker/api run dev",
    "dev:web": "cross-env NODE_ENV=development npm -w @cyclebreaker/web run dev",
    "build": "npm -w @cyclebreaker/shared run build && npm -w @cyclebreaker/ingestion run build && npm -w @cyclebreaker/api run build && npm -w @cyclebreaker/web run build",
    "typecheck": "npm -ws run typecheck",
    "lint": "npm -ws run lint",
    "test": "cross-env NODE_ENV=test npm -ws run test",
    "test:ai": "cross-env NODE_ENV=test npm -w @cyclebreaker/ai run test",
    "quick": "node scripts/quick-commit.mjs"
  },
  "devDependencies": {
    "@swc/helpers": "^0.5.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  },
  "dependencies": {}
}
